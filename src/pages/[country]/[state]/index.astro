---
<LayoutApp
  title={`${stateName}, ${countryData?.data.canonical_name}`}
  reports={reports}
>
  <LocationList
    breadcrumbs={[
      {
        label: countryData?.data.canonical_name,
        url: `/${country}`
      }
    ]}
    categoryTitle={stateName}
    categoryCount={recordCount}
    locations={cities}
  />
</LayoutApp>