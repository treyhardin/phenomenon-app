---
import LayoutMaster from "./layoutMaster.astro";

interface Props {
  title: string;
}

const { title } = Astro.props
---
<LayoutMaster
  title={title}
>
  <div class="content">
    <aside>
      <slot />
    </aside>
    <main>
      <!-- <slot /> -->
    </main>
  </div>
</LayoutMaster>

<style>

  .content {
    display: flex;
    flex-direction: row;
    justify-content: stretch;
    align-items: stretch;
    padding-inline: var(--page-margin);
    padding-block: 0 var(--page-margin);
    gap: var(--space-sm);
    height: 100%;
  }

  main {
    background-color: var(--color-background-secondary);
    flex: 0 1 100%;
    height: 100%;
  }

  aside {
    flex: 0 0 20%;
    height: 100%;
    overflow-y: auto;
  }


</style>